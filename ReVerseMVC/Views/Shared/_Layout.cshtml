<!DOCTYPE html>
<html lang="en" class="h-100">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/5828ed7338.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/css/prism.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="shortcut icon" href="~/img/favicon.ico" type="image/x-icon" />

    <title>App Name: A Coding Project by Trond Stolsvik</title>
</head>
<body class="d-flex flex-column h-100 bg-light">
    <header>
        <nav id="navbar" class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand link-text" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/sds-small.png" alt="Brand image" width="48" class="d-inline-block align-text-top" />&nbsp; APP NAME
                </a>
                <button type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarCollapse"
                        aria-controls="navbarCollapse"
                        aria-expanded="false"
                        aria-label="Toggle Navigation"
                        class="navbar-toggler">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div id="navbarCollapse" class="collapse navbar-collapse">
                    <ul class="navbar-nav mb-2 mb-md-0 ms-md-auto">
                        <li class="nav-item mx-auto">
                            <a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link link-text">Home</a>
                        </li>
                        <li class="nav-item mx-auto">
                            <a asp-area="" asp-controller="Home" asp-action="App" class="nav-link link-text">The App</a>
                        </li>
                        <li class="nav-item mx-auto">
                            <a asp-area="" asp-controller="Home" asp-action="Code" class="nav-link link-text">The Code</a>
                        </li>
                        <li class="nav-item mx-auto">
                            <a href="#" target="_blank" class="nav-link link-text">Github Repo</a>
                        </li>
                        <li class="nav-item mx-auto">
                            <a href="#" target="_blank" class="nav-link link-text">About</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    @RenderBody()
    <footer class="footer mt-auto py-3 bg-dark fixed-bottom">
        <div class="container-fluid">
            <div class="row row-cols-1 row-cols-md-3 gy-3 gy-md-0">
                <div class="col text-light d-flex align-items-center justify-content-center justify-content-md-start order-last order-md-first">
                    <div>
                        <small><span>&copy;</span> 2023 by Trond Stolsvik</small>
                    </div>
                </div>
                <div class="col d-flex align-items-center justify-content-center order-first order-md-middle">
                    <img src="~/img/sds-small.png"
                         alt="Trond Stolsvik logo"
                         height="32" />
                </div>
                <div class="col d-flex align-items-center justify-content-center justify-content-md-end order-middle order-md-last">
                    <div class="row">
                        <div class="col social">
                            <a href="https://www.linkedin.com/in/trond-st%C3%B8lsvik-a84978218/"
                               target="_blank">
                                <i class="fab fa-linkedin fa-2x"></i>
                            </a>
                        </div>
                        <div class="col social">
                            <a href="https://github.com/TRStolsvik" target="_blank">
                                <i class="fab fa-github fa-2x"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script src="~/js/app.js"></script>
    <script src="~/js/prism.js"></script>
    <script>
        Prism.plugins.NormalizeWhitespace.setDefaults({
            'remove-trailing': true,
            'remove-indent': true,
            'left-trim': true,
            'right-trim': true,
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>